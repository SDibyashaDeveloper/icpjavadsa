class Test
{
   public static void main(String arg[])
   {
      
      StringBuffer s=new StringBuffer("hi");
      System.out.println(s);
       s.append("ram");
       s.append(10);
       s.append(12.34);
       s.append(true);
      System.out.println(s);
   }

}

