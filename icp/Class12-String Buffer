class Test
{
   public static void main(String arg[])
   {
      
      StringBuffer s=new StringBuffer("welcome");
      String s1="";
      int i;
      for(i=0;i<s.length();i++)
      {
         s1=s1+s.charAt(i);
      }
      System.out.println(s1);
   }

}

