import java.util.Scanner;
class Test
{
   public static void main(String arg[])
   {
      
      StringBuffer s=new StringBuffer();
      System.out.println(s.capacity());
      s.append("abcdefghijkl");
       System.out.println(s.capacity());
   }

}
