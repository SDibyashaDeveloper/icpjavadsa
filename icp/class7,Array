//display array element forward direction 
int arr[]={10,20,30,40};
int index;
for(index=0;index<arr.length;index++)
{
	System.out.print(arr[index]+" ");
}

o/p:
10 20 30 40

//display array element backward direction 
int arr[]={10,20,30,40};
int index;
for(index=arr.length-1;index>=0;index--)
{
	System.out.print(arr[index]+" ");
}

o/p:
10 20 30 40



