//sum of element

int arr[]={5,7,8,9,12};
int s=0;
int index;
for(index=0;index<arr.length;index++)
{
	s=s+arr[index];
}
System.out.println("sum of element="+s);


find the sum of element using method 
________________________________________


class Test
{
	static void sumele(int arr[])
	{
	   	int s=0;
		int index;
		for(index=0;index<arr.length;index++)
		{
			s=s+arr[index];
		}
		System.out.println("sum of element="+s);
	}

	public static void main(String arg[])
	{
	   	int arr[]={5,7,8,9,12};
		sumele(arr);
	
        
	}
}



//input and sum of element using method 


import java.util.*;

class Test
{
	static void sumele(int arr[])
	{
	   	int s=0;
		int index;
		for(index=0;index<arr.length;index++)
		{
			s=s+arr[index];
		}
		System.out.println("sum of element="+s);
	}
    static void input(int arr[])
    {
            int index;
            Scanner sc=new Scanner(Systen.in);
		for(index=0;index<arr.length;index++)
		{
			arr[index]=sc.nextInt();
		}
		
    }
	public static void main(String arg[])
	{
	   Scanner sc=new Scanner(System.in);
	   System.out.println("enter array size ");
	   int size=sc.nextInt();
	   	int arr[]=new int[size];
	   	System.out.println("enter "+size+" elements");
	   	input(arr);
		sumele(arr); 
	}
}