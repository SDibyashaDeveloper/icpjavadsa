//display number digit revorder
int no=125;
while(no!=0)
{
    System.out.println(no%10);
    no=no/10;
}


//multiply 2 no without * operator 
int a=3,b=7,s=0;
while(a>0)
{
   s=s+b;
   a--; 
}
System.out.println(s);