 public boolean startsWith(java.lang.String, int);
  public boolean startsWith(java.lang.String);
  public boolean endsWith(java.lang.String);

import java.util.Scanner;
class Test
{
   public static void main(String arg[])
   {
       String s="welcome";
      System.out.println(s.startsWith("w"));
       System.out.println(s.startsWith("wel"));
        System.out.println(s.startsWith("xel"));
         System.out.println(s.startsWith("co",3));
        System.out.println(s.endsWith("e"));  
        System.out.println(s.endsWith("ome")); 
        System.out.println(s.endsWith("omx")); 
   }
}


