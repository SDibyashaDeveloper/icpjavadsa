import java.util.Scanner;
class Test
{
   public static void main(String arg[])
   {
      
       String colo1="red";
       String color2="blue";
       String color3="cyan";

       String color[]={"red","blue","cyna"};//array of string initlization in single line
              int i;
       for(i=0;i<color.length;i++)
       {
         System.out.println(color[i]);
       }
       System.out.println(color[0].charAt(1));
       System.out.println(color[0].length());
       System.out.println(color[0].toUpperCase());
   }

}

