passing 2d array in method
________________________
import java.util.*;
class Test
{
	static void input(int arr[][],int r,int c)
	{
	       System.out.println("enter "+r*c+" elements ");
				int i,j;

				for(i=0;i<r;i++)
				{
					for(j=0;j<c;j++)
					{
					  arr[i][j]=sc.nextInt();
					}
					
				}
	}
	static void disp(int arr[][],int r,int c)
	{
	     System.out.println("elements are ");
			for(i=0;i<r;i++)
			{
				for(j=0;j<c;j++)
				{
				  System.out.print(arr[i][j]+"\t");
				}
				System.out.println();
			}

	}
	public static void main(String arg[])
	{
	      Scanner sc=new Scanner(Sydtem.in);
			int arr[][];
			System.out.println("enter 2d array r and col");
			int r=sc.nextInt();
			int c=sc.nextInt();
			arr=new int[r][c];
			input(arr,r,c);
			disp(arr,r,c);
	}
}


















import java.util.*;

class TwoDArray {
    int arr[][];
    int r, c;
    Scanner sc;

    // Constructor to initialize array and take input
    TwoDArray(int rows, int cols) {
        sc = new Scanner(System.in);
        r = rows;
        c = cols;
        arr = new int[r][c];

        System.out.println("Enter " + (r * c) + " elements:");
        for (int i = 0; i < r; i++) {
            for (int j = 0; j < c; j++) {
                arr[i][j] = sc.nextInt();
            }
        }
    }

    // Method to display array
    void display() {
        System.out.println("Elements are:");
        for (int i = 0; i < r; i++) {
            for (int j = 0; j < c; j++) {
                System.out.print(arr[i][j] + "\t");
            }
            System.out.println();
        }
    }
}

 class Test {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter number of rows and columns:");
        int rows = sc.nextInt();
        int cols = sc.nextInt();

        // Object creation â†’ constructor will handle input
        TwoDArray obj = new TwoDArray(rows, cols);

        // Display array
        obj.display();
    }
}